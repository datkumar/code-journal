---
import { getCollection } from "astro:content";
import BaseLayout from "../../../layouts/BaseLayout.astro";

const gitConcepts = (await getCollection("concepts")).filter((item) =>
  item.data.tags.includes("git")
);

const baseUrl = import.meta.env.BASE_URL;
const folderSlug = "dev/git";
const title = "Git";
---

<BaseLayout tabTitle={title}>
  <h1>{title}</h1>
  <ul>
    {
      gitConcepts.map((entry) => (
        <li>
          <a href={`${baseUrl}/${folderSlug}/${entry.slug}/`}>
            {entry.data.title}
          </a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
