---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { compareStrings, containsSomeTag } from "../../utils/helper-functions";
import { problemDifficulties } from "../../utils/data";
import type { CollectionEntry } from "astro:content";

const stlEntries = (await getCollection("concepts")).filter((item) =>
  item.data.tags.includes("stl")
);

const dsaConcepts = (await getCollection("concepts")).filter(
  (item) =>
    item.data.tags.includes("dsa") && !item.data.tags.includes("algorithm")
);
const recursionConcepts: CollectionEntry<"concepts">[] = [];
const miscDsaConceptts: CollectionEntry<"concepts">[] = [];
for (const entry of dsaConcepts) {
  if (containsSomeTag(entry.data.tags, ["recursion"])) {
    recursionConcepts.push(entry);
  } else {
    miscDsaConceptts.push(entry);
  }
}

const algorithms = (await getCollection("concepts")).filter((item) =>
  item.data.tags.includes("algorithm")
);

const graphAlgos: CollectionEntry<"concepts">[] = [];
const sortSearchAlgos: CollectionEntry<"concepts">[] = [];
for (const entry of algorithms) {
  if (containsSomeTag(entry.data.tags, ["sorting", "binary-search"])) {
    sortSearchAlgos.push(entry);
    continue;
  }
  if (containsSomeTag(entry.data.tags, ["graph"])) {
    graphAlgos.push(entry);
    continue;
  }
}

const dsaProblems = await getCollection("dsaProblems");
const stackQueueHeapProbs: CollectionEntry<"dsaProblems">[] = [];
const listProbs: CollectionEntry<"dsaProblems">[] = [];
const arrayStringProbs: CollectionEntry<"dsaProblems">[] = [];
for (const entry of dsaProblems) {
  if (containsSomeTag(entry.data.ds, ["stack", "queue", "heap"])) {
    stackQueueHeapProbs.push(entry);
    continue;
  }
  if (containsSomeTag(entry.data.ds, ["list"])) {
    listProbs.push(entry);
    continue;
  }
  arrayStringProbs.push(entry);
}

// dsaProblems.filter((entry) =>
//   containsSomeTag(entry.data.ds, ["stack", "queue", "heap"])
// );

const baseUrl = import.meta.env.BASE_URL;
---

<style>
  ul,
  ol {
    padding: 0;
    margin: 0;
  }

  ul {
    list-style: disc;
  }

  li {
    padding: 0;
    margin: 0;
    padding-bottom: 3px;
    /* padding-left: 0.5rem; */
    /* margin-left: 2rem; */
    margin-left: 0.5rem;
    list-style-position: inside;
  }

  li::marker {
    margin: 0;
    padding: 0;
    margin: 0;
  }
  ul li::marker {
    font-size: 20px;
  }
  ol li::marker {
  }

  .problem-item {
    list-style: none;
  }
</style>

<BaseLayout tabTitle="DSA">
  <h1>DSA</h1>

  <hr />

  <h2>C++ primer</h2>
  <ul>
    {
      stlEntries
        .sort((a, b) => compareStrings(a.slug, b.slug))
        .map((entry) => (
          <li>
            <a href={`${baseUrl}/dsa/${entry.slug}`}>{entry.data.title}</a>
          </li>
        ))
    }
    <li><a rel="stylesheet" href={`${baseUrl}/cpp`}>More C++</a></li>
  </ul>

  <hr />

  <h2>Theory and prerequisites</h2>

  <h3>Misc</h3>
  <ul>
    {
      miscDsaConceptts.map((entry) => (
        <li>
          <a href={`${baseUrl}/dsa/${entry.slug}`}>{entry.data.title}</a>
        </li>
      ))
    }
  </ul>

  <h3>Recursion</h3>
  <ul>
    {
      recursionConcepts.map((entry) => (
        <li>
          <a href={`${baseUrl}/dsa/${entry.slug}`}>{entry.data.title}</a>
        </li>
      ))
    }
  </ul>

  <h3>Sorting and Searching algorithms</h3>
  <ul>
    {
      sortSearchAlgos.map((entry) => (
        <li>
          <a href={`${baseUrl}/dsa/${entry.slug}`}>{entry.data.title}</a>
        </li>
      ))
    }
  </ul>

  <h3>Graph algorithms</h3>
  <ul>
    {
      graphAlgos.map((entry) => (
        <li>
          <a href={`${baseUrl}/dsa/${entry.slug}`}>{entry.data.title}</a>
        </li>
      ))
    }
  </ul>

  <hr />

  <!-- PROBLEMS: -->

  <h2>Arrays, Strings</h2>
  <ul>
    {
      arrayStringProbs
        .sort((a, b) => compareStrings(a.slug, b.slug))
        .map((entry) => {
          return (
            <li class="problem-item">
              {problemDifficulties[entry.data.level].icon}&ensp;
              <a href={`${baseUrl}/dsa/${entry.slug}/`}>{entry.data.title}</a>
            </li>
          );
        })
    }
  </ul>

  <h2>Stack, Queues, Heaps</h2>
  <ul>
    {
      stackQueueHeapProbs
        .sort((a, b) => a.data.level - b.data.level)
        .map((entry) => {
          return (
            <li class="problem-item">
              {problemDifficulties[entry.data.level].icon}&ensp;
              <a href={`${baseUrl}/dsa/${entry.slug}/`}>{entry.data.title}</a>
            </li>
          );
        })
    }
  </ul>

  <h2>Linked Lists</h2>
  <ul>
    {
      listProbs
        .sort((a, b) => a.data.level - b.data.level)
        .map((entry) => {
          return (
            <li class="problem-item">
              {problemDifficulties[entry.data.level].icon}&ensp;
              <a href={`${baseUrl}/dsa/${entry.slug}/`}>{entry.data.title}</a>
            </li>
          );
        })
    }
  </ul>
</BaseLayout>
